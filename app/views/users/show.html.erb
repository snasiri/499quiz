<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><a href="http://mason.gmu.edu/~snasiri2">Link For Number 7</a></p>
    </section>
  </aside>
  <div class="span8"  id="transparent">
  <% if @user.posts.any? %>
  	<h3>Posts (<%= @user.posts.count %>) </h3>
  	<ol class="posts">
  		<%= render @posts %>
  	</ol>
  	<%= will_paginate @posts %>
  	<% end %>
  	</div>
</div>