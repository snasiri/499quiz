<li>
	<span class="content"><%= post.content %></span>
	<span class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago. </span>
	<% if current_user?(post.user) %>
		<%= link_to raw('<i class="icon-trash icon-red"></i>'), post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, title: "Delete", class: "btn btn-default btn-small" %>
		<% end %>
	</li>