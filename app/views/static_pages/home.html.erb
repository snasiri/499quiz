<% if signed_in? %>
   <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
      <div class="span8" id="transparent">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
      </div>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Security Portal! </h1>

    <h2>
      This is the home page for <a href="http://it499-securityportal.herokuapp.com/">IT Security Portal (IT499)</a>
      sample application.
    </h2>
    <fieldset border="1">If you already have an account, please sign in:  <%= link_to "Sign in now!", signin_path, class: "btn btn-small btn-primary" %></fieldset>

    <fieldset>If you do not have an account, please register here:  <%= link_to "Sign up now!", signup_path, class: "btn btn-small btn-primary" %></fieldset>
    
  </div>

<% end %> 
